<UserControl x:Class="PointOfSale.PaymentSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1800">
    <Grid>
        <Border x:Name="controllerBorder">
            <StackPanel>
                <TextBlock Text="Payment Options" TextAlignment="Center" FontSize="70"/>
                <Button Click="CardPayment" Margin="50" FontSize="70">Debit/Credit</Button>
                <Button Click="CashPayment" Margin="50" FontSize="70">Cash</Button>
                <Button Click="ReturnToMainMenu" Margin="50" FontSize="70">Return To Menu</Button>
            </StackPanel>
        </Border>
        
        
    </Grid>
</UserControl>
