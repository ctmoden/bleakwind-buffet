<UserControl x:Class="PointOfSale.BriarhearthCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <TextBlock  FontWeight="Bold" TextAlignment="Center" FontSize="40" Grid.Row="0">
                Burger Options
        </TextBlock>
        <StackPanel Grid.Row="1">
            <CheckBox Content="Bun" IsChecked="True" FontSize="30"></CheckBox>
            <CheckBox Content="Ketchup" IsChecked="True" FontSize="30"></CheckBox>
            <CheckBox Content="Mustard" IsChecked="True" FontSize="30"></CheckBox>
            <CheckBox Content="Pickle" IsChecked="True" FontSize="30"></CheckBox>
            <CheckBox Content="Cheese" IsChecked="True" FontSize="30"></CheckBox>
        </StackPanel>
        <Button Content="Complete" FontSize="40" FontWeight="Bold" Width="250" Height="70" Grid.Row="2" Click="ReturnToMenu"/>
    </Grid>
</UserControl>
