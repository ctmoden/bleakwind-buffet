@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<form id="bleakwind-database">
    <div id="search">
        <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
        <input type="submit" value="Search">
    </div>
    <div id="filters">
        <h4>Category</h4>
        @foreach (String category in BleakwindBuffet.Data.Menu.Categories)
        {
            <label>
                <!--FIXME not sure what to do for checkbox yet-->
                <input type="checkbox" name="Categories" value="@category" />
                @category
            </label>
        }
        <h4>Price</h4>
        <div>
            Between<input name="PriceMin" type="number" min="0" step=".25" placeholder="min"
                          value="@Model.PriceMin" />
            and
            <input name="PriceMax" type="number" min="0" step=".25" placeholder="max"
                   value="@Model.PriceMax" />
        </div>
        <h4>Calories</h4>
        <div>
            Between<input name="CaloriesMin" type="number" min="0" step=".25" placeholder="min"
                          value="@Model.CaloriesMin" />
            and
            <input name="PriceMax" type="number" min="0" step=".25" placeholder="max"
                   value="@Model.CaloriesMax" />
        </div>
    </div>

</form>

<h1>Welcome to the Bleakwind Buffet</h1>
<p>
    We at Bleakwind Buffet are proud to bring you authentic fantasy meals straight from the world of Skyrim.
    Shake the blood off your sword and sake your thirst with one of our old-fashioned sailor sodas.
    Hack into a Smokehouse Skeleton with your dagger. Or vanquish the the mighty Thalmor Triple Burger!
    You’ve had a hard adventure and earned your loot, so spend it with us!
</p>
<u1 class="menu-list">
    <h2>Entrees</h2>
    
    @foreach (BleakwindBuffet.Data.Entrees.Entree entree in Model.Entrees)
    {
        <li>
            <div class="menu-item">
                @entree.Name
                <div>
                    ---Price: $@entree.Price
                </div>
                <div>
                    ---Calories: @entree.Calories
                </div>

            </div>
        </li>

    }

    <h2>Sides</h2>

    @foreach (BleakwindBuffet.Data.Sides.Side side in Model.Sides)
    {
        <li>
            <div class="menu-item">
                @side.Name
                <div>
                    ---Price: $@side.Price
                </div>
                <div>
                    ---Calories: @side.Calories
                </div>

            </div>
        </li>
    }


    <h2>Drinks</h2>
    @foreach (BleakwindBuffet.Data.Drinks.Drink drink in Model.Drinks)
    {
        <li>
            <div class="menu-item">
                @drink.Name
                <div>
                    ---Price: $@drink.Price
                </div>
                <div>
                    ---Calories: @drink.Calories
                </div>

            </div>
        </li>
    }
    <h2>Combo Deals</h2>
    <p>
        Get the best bang for your buck with a combo meal!
        Any combination of one entree, side, and drink will earn you a $1 discount!
    </p>

    <h2>Thirsty?  We have a wide variety of flavors for our famed Sailor Soda!</h2>
    @foreach (var flavor in Model.SodaFlavors)
    {
        <li>
            <div class="soda-flavor">
                @flavor
            </div>
        </li>
    }
</u1>


